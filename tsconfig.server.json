{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.server.tsbuildinfo",

    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noEmitOnError": false,

    "allowJs": true,
    "verbatimModuleSyntax": false // ‚Üê change here
  },
  "include": ["server", "shared"],
  "exclude": ["app", "dist", "node_modules"]
}
